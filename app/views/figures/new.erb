<form method='POST' action='/figures'>

<label>Figure Name</lable>
<input type='text' name='figure[name]' id='figure_name'>
    <br>

<label>Title</lable>
<%Title.all.each do |t| %>
<label><%=t.name%></label>
<input id="title_<%=t.id%>" type="checkbox" name="figure[title_ids][]" value="<%= t.id %>">
  <% end %>
  <br>

<label>Create New Title</lable>
<br>
<label>Title Name</lable>
<input type='text' name='title[name]' id='new_title'>
<br>

<br>

<label>Landmarks</lable>
<%Landmark.all.each do |l| %>
<label><%=l.name%></label>
<input id="landmark_<%=l.id %>" type="checkbox" name="figure[landmark_ids][]" value="<%= l.id %>">
<% end %>
<br>

<label>Create New Landmark</lable>
<br>
<label>Landmark Name</lable>
<input type='text' name='landmark[name]' id='new_landmark'>
<br>
<label>Year Completed</lable>
<input type='text' name='landmark[year_completed]' id='landmark_year_completed'>
<br>
  <input value='Create New Figure' type='submit'>
</form>
